<UserControl x:Class="ACM.Presentation.Views.Examples.UserControlTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:acm_text="clr-namespace:ACM.Presentation.Controls.Text"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <acm_text:ACMTextBox x:Name="acmTextBox" Width="200" Height="55" 
                             TextBoxType="DefaultMode" 
                             Caption="Floating Password"
                             KeyDown="OnKeyDownHandler"
                             Style="{StaticResource ACMTextBox.Style.Base}"
                             /> 
    </StackPanel>
</UserControl>
